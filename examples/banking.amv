func void tikkie(& int from, & int to, int amount) {
    if (from >= amount) {
        from -= amount;
        to += amount;
      } {};
};


func void atm(& int account, int cash) {
    if (account >= cash) {
      account -= cash;
    } {};
};

func void salary(& int employee, int payment) {
    employee += payment;
};



